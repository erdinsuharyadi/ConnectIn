<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg"
        android:layout_marginBottom="?attr/actionBarSize">

        <RelativeLayout
            android:id="@+id/ll_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ava"
                app:civ_border_color="#CBA5A5A5"
                app:civ_border_width="1dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#8BC34A"
                app:civ_shadow_radius="3dp" />

            <TextView
                android:id="@+id/tv_company_name"
                android:text="Company Name"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_profile"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_profile_name"
                android:text="Your Name"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_profile"
                android:layout_below="@+id/tv_company_name"/>
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="20dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="20dp"
                android:background="#ffffff">

                <RelativeLayout style="@style/profileDetailsLayout">
                    <ImageView
                        android:id="@+id/nameImageView"
                        android:src="@drawable/ic_name"
                        style="@style/profileDetailsImage" />
                    <TextView
                        android:id="@+id/nameTextView"
                        android:text="Company Info"
                        android:layout_toRightOf="@id/nameImageView"
                        style="@style/profileDetailsTextMain" />
                    <TextView
                        android:id="@+id/tv_comp_info"
                        android:text="Start Up"
                        android:layout_toRightOf="@id/nameImageView"
                        style="@style/profileDetailsMiniText" />
                </RelativeLayout>
                <View style="@style/proifleDetailsView" />
                <RelativeLayout style="@style/profileDetailsLayout">
                    <ImageView
                        android:id="@+id/mobileImageView"
                        android:src="@drawable/ic_mobile"
                        style="@style/profileDetailsImage" />
                    <TextView
                        android:text="Location"
                        android:layout_toRightOf="@id/mobileImageView"
                        style="@style/profileDetailsTextMain"/>
                    <TextView
                        android:id="@+id/tv_comp_location"
                        android:text="Jakarta Utara"
                        android:layout_toRightOf="@id/mobileImageView"
                        style="@style/profileDetailsMiniText" />
                </RelativeLayout>
                <View style="@style/proifleDetailsView" />
                <RelativeLayout style="@style/profileDetailsLayout">
                    <ImageView
                        android:id="@+id/emailImageView"
                        android:src="@drawable/ic_email"
                        style="@style/profileDetailsImage" />
                    <TextView
                        android:text="Email"
                        android:layout_toRightOf="@id/emailImageView"
                        style="@style/profileDetailsTextMain" />
                    <TextView
                        android:id="@+id/tv_comp_email"
                        android:text="developer@appsnipp.com"
                        android:layout_toRightOf="@id/emailImageView"
                        style="@style/profileDetailsMiniText" />
                </RelativeLayout>
                <View style="@style/proifleDetailsView" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="99dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_corner_outline_red"
            android:textColor="#F44336"
            android:text="LOGOUT"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>
</layout>
