<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                style="@style/headerText"
                android:text="Offer Details"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"/>

            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/nameImageView"
                    app:srcCompat="@drawable/ic_last_page_black_24dp"
                    style="@style/profileDetailsImage" />
                <TextView
                    android:id="@+id/title_project_name"
                    android:text="Project Name"
                    android:layout_toRightOf="@id/nameImageView"
                    style="@style/projectDetailsMiniText" />
                <TextView
                    android:id="@+id/tv_project_name"
                    android:text="developer"
                    android:layout_below="@+id/title_project_name"
                    android:layout_toRightOf="@id/nameImageView"
                    style="@style/projectDetailsTextMain" />

            </RelativeLayout>
            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/mobileImageView"
                    app:srcCompat="@drawable/ic_last_page_black_24dp"
                    style="@style/profileDetailsImage" />
                <TextView
                    android:id="@+id/title_eng_name"
                    android:text="Engineer Name"
                    android:layout_toRightOf="@id/mobileImageView"
                    style="@style/projectDetailsMiniText"/>
                <TextView
                    android:id="@+id/tv_eng_name"
                    android:text="+91-8129999999"
                    android:layout_below="@+id/title_project_desc"
                    android:layout_toRightOf="@id/mobileImageView"
                    style="@style/projectDetailsTextMain" />
            </RelativeLayout>
            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/emailImageView"
                    app:srcCompat="@drawable/ic_last_page_black_24dp"
                    style="@style/profileDetailsImage" />
                <TextView
                    android:text="Project Job"
                    android:layout_toRightOf="@id/emailImageView"
                    style="@style/projectDetailsMiniText" />
                <TextView
                    android:id="@+id/tv_project_job"
                    android:text="developer@appsnipp.com"
                    android:layout_toRightOf="@id/emailImageView"
                    style="@style/projectDetailsTextMain" />
            </RelativeLayout>
            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/dobImageView"
                    app:srcCompat="@drawable/ic_last_page_black_24dp"
                    style="@style/profileDetailsImage" />
                <TextView
                    android:text="Project Fee"
                    android:layout_toRightOf="@id/dobImageView"
                    style="@style/projectDetailsMiniText" />
                <TextView
                    android:id="@+id/tv_project_fee"
                    android:text="12-05-1990"
                    android:layout_toRightOf="@id/dobImageView"
                    style="@style/projectDetailsTextMain" />
            </RelativeLayout>
            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/addressImageView"
                    app:srcCompat="@drawable/ic_last_page_black_24dp"
                    style="@style/profileDetailsImage" />
                <TextView
                    android:text="Created Date"
                    android:layout_toRightOf="@id/addressImageView"
                    style="@style/projectDetailsMiniText" />
                <TextView
                    android:id="@+id/tv_created_at"
                    android:text="+6299999"
                    android:layout_toRightOf="@id/addressImageView"
                    style="@style/projectDetailsTextMain" />
            </RelativeLayout>
            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout">
                <ImageView
                    android:id="@+id/iv_status"
                    app:srcCompat="@drawable/ic_last_page_black_24dp"
                    style="@style/profileDetailsImage" />
                <TextView
                    android:text="Status"
                    android:layout_toRightOf="@id/iv_status"
                    style="@style/projectDetailsMiniText" />
                <TextView
                    android:id="@+id/tv_offer_status"
                    android:text="On Confirm"
                    android:layout_toRightOf="@id/iv_status"
                    style="@style/projectDetailsTextMain" />
            </RelativeLayout>
            <View style="@style/proifleDetailsView" />


        </LinearLayout>
    </ScrollView>
</layout>
